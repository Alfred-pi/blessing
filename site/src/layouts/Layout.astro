---
import '../styles/global.css';
import type { Lang } from '../i18n/translations';
import { translations, getLocalizedPath } from '../i18n/translations';

interface Props { lang: Lang; }
const { lang } = Astro.props;
const t = translations[lang];
const navLinks = ['home', 'services', 'about', 'gallery', 'contact'] as const;
const flags: Record<Lang, string> = { pt: 'ðŸ‡¦ðŸ‡´', fr: 'ðŸ‡«ðŸ‡·', en: 'ðŸ‡¬ðŸ‡§' };
const labels: Record<Lang, string> = { pt: 'PT', fr: 'FR', en: 'EN' };
const langs: Lang[] = ['pt', 'fr', 'en'];
---

<!DOCTYPE html>
<html lang={lang}>
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>{t.meta.title}</title>
  <meta name="description" content={t.meta.description} />
  <meta name="robots" content="index, follow" />
  <link rel="canonical" href={`https://alfred-pi.github.io${getLocalizedPath(lang)}`} />
  {langs.filter(l => l !== lang).map(l => (
    <link rel="alternate" hreflang={l} href={`https://alfred-pi.github.io${getLocalizedPath(l)}`} />
  ))}
  <link rel="alternate" hreflang="x-default" href="https://alfred-pi.github.io/blessing/" />
  <meta property="og:title" content={t.meta.title} />
  <meta property="og:description" content={t.meta.description} />
  <meta property="og:type" content="website" />
  <meta property="og:locale" content={lang === 'pt' ? 'pt_AO' : lang === 'fr' ? 'fr_FR' : 'en_US'} />
  <link rel="icon" type="image/svg+xml" href="/blessing/favicon.svg" />
</head>
<body>
  <nav class="navbar" id="navbar">
    <div class="container nav-inner">
      <a href={getLocalizedPath(lang)} class="logo">
        <div class="logo-mark">
          <div class="logo-ring">
            <span class="ring-r"></span><span class="ring-y"></span><span class="ring-g"></span><span class="ring-b"></span>
          </div>
          <span class="logo-blg">BLG</span>
        </div>
        <div class="logo-text-group">
          <span class="logo-name">BLESSING</span>
          <span class="logo-sub">Uniformes Angola</span>
        </div>
      </a>
      
      <div class="nav-links" id="navLinks">
        {navLinks.map(key => (
          <a href={`#${key}`} class="nav-link">{t.nav[key]}</a>
        ))}
      </div>
      
      <div class="nav-right">
        <div class="lang-switcher" id="langSwitcher">
          <button class="lang-btn" id="langBtn">
            <span>{flags[lang]}</span>
            <span>{labels[lang]}</span>
            <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2.5"><polyline points="6 9 12 15 18 9"/></svg>
          </button>
          <div class="lang-dropdown" id="langDropdown">
            {langs.map(l => (
              <a href={getLocalizedPath(l)} class={`lang-option ${l === lang ? 'active' : ''}`}>
                <span>{flags[l]}</span><span>{labels[l]}</span>
              </a>
            ))}
          </div>
        </div>
        <a href="#contact" class="btn btn-primary nav-cta">{t.hero.cta}</a>
        <button class="mobile-toggle" id="mobileToggle" aria-label="Menu">
          <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="3" y1="6" x2="21" y2="6"/><line x1="3" y1="12" x2="21" y2="12"/><line x1="3" y1="18" x2="21" y2="18"/></svg>
        </button>
      </div>
    </div>
  </nav>

  <slot />

  <footer class="footer">
    <div class="container">
      <div class="footer-grid">
        <div>
          <div class="logo" style="margin-bottom: 1rem;">
            <div class="logo-mark small">
              <div class="logo-ring small"><span class="ring-r"></span><span class="ring-y"></span><span class="ring-g"></span><span class="ring-b"></span></div>
              <span class="logo-blg small">BLG</span>
            </div>
            <span class="logo-name">BLESSING</span>
          </div>
          <p class="footer-desc">{t.footer.tagline}</p>
        </div>
        <div>
          <h4 class="footer-title">{t.footer.links}</h4>
          <div class="footer-links">
            {['services', 'about', 'gallery', 'contact'].map(key => (
              <a href={`#${key}`}>{t.nav[key]}</a>
            ))}
          </div>
        </div>
        <div>
          <h4 class="footer-title">{t.footer.social}</h4>
          <div class="social-links">
            <a href="https://facebook.com/blessinguniformes" target="_blank" rel="noreferrer" aria-label="Facebook">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
            </a>
            <a href="https://instagram.com/blessing_angola" target="_blank" rel="noreferrer" aria-label="Instagram">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="2" y="2" width="20" height="20" rx="5" ry="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" y1="6.5" x2="17.51" y2="6.5"/></svg>
            </a>
            <a href="https://wa.me/" target="_blank" rel="noreferrer" aria-label="WhatsApp">
              <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
            </a>
          </div>
        </div>
      </div>
      <div class="footer-bottom">
        <p>Â© 2025 Blessing Uniformes Angola. {t.footer.rights}</p>
      </div>
    </div>
  </footer>

  <script>
    const navbar = document.getElementById('navbar');
    window.addEventListener('scroll', () => navbar?.classList.toggle('scrolled', window.scrollY > 50));
    const toggle = document.getElementById('mobileToggle');
    const links = document.getElementById('navLinks');
    toggle?.addEventListener('click', () => links?.classList.toggle('open'));
    links?.querySelectorAll('a').forEach(a => a.addEventListener('click', () => links?.classList.remove('open')));
    const langBtn = document.getElementById('langBtn');
    const langDrop = document.getElementById('langDropdown');
    langBtn?.addEventListener('click', (e) => { e.stopPropagation(); langDrop?.classList.toggle('open'); });
    document.addEventListener('click', () => langDrop?.classList.remove('open'));
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => { if (entry.isIntersecting) { entry.target.classList.add('visible'); observer.unobserve(entry.target); } });
    }, { threshold: 0.1, rootMargin: '0px 0px -40px 0px' });
    document.querySelectorAll('.reveal').forEach(el => observer.observe(el));
  </script>

  <style>
    .navbar { position: fixed; top: 0; left: 0; right: 0; z-index: 40; background: rgba(255,255,255,0.85); backdrop-filter: blur(20px); border-bottom: 1px solid transparent; transition: all 0.3s; }
    .navbar.scrolled { border-color: var(--border); box-shadow: 0 1px 12px rgba(0,0,0,0.04); }
    .nav-inner { display: flex; align-items: center; justify-content: space-between; height: 4.5rem; }
    
    .logo { display: flex; align-items: center; gap: 0.75rem; }
    .logo-mark { position: relative; width: 2.5rem; height: 2.5rem; display: flex; align-items: center; justify-content: center; }
    .logo-mark.small { width: 2rem; height: 2rem; }
    .logo-ring { position: absolute; inset: 0; border-radius: 50%; overflow: hidden; }
    .logo-ring span { position: absolute; width: 50%; height: 50%; }
    .ring-r { top: 0; left: 0; background: var(--red); }
    .ring-y { top: 0; right: 0; background: var(--yellow); }
    .ring-g { bottom: 0; left: 0; background: var(--green); }
    .ring-b { bottom: 0; right: 0; background: var(--blue); }
    .logo-blg { position: relative; z-index: 1; font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 800; font-size: 0.6rem; color: white; letter-spacing: 0.05em; background: var(--text); width: 1.5rem; height: 1.5rem; border-radius: 50%; display: flex; align-items: center; justify-content: center; }
    .logo-blg.small { width: 1.2rem; height: 1.2rem; font-size: 0.45rem; }
    .logo-text-group { display: flex; flex-direction: column; line-height: 1.2; }
    .logo-name { font-family: 'Plus Jakarta Sans', sans-serif; font-weight: 700; font-size: 1rem; letter-spacing: -0.01em; }
    .logo-sub { font-size: 0.65rem; color: var(--text-3); font-weight: 500; letter-spacing: 0.02em; }
    
    .nav-links { display: flex; gap: 2rem; }
    .nav-link { font-size: 0.875rem; color: var(--text-2); font-weight: 500; transition: color 0.2s; }
    .nav-link:hover { color: var(--accent); }
    .nav-right { display: flex; align-items: center; gap: 0.75rem; }
    .nav-cta { padding: 0.75rem 1.5rem; font-size: 0.8rem; }
    .mobile-toggle { display: none; background: none; border: none; color: var(--text-2); cursor: pointer; padding: 0.5rem; }
    
    .lang-switcher { position: relative; }
    .lang-btn { display: flex; align-items: center; gap: 0.375rem; padding: 0.5rem 0.75rem; border-radius: 28px; border: 1px solid var(--border); background: var(--bg); color: var(--text-2); cursor: pointer; font-size: 0.8rem; font-weight: 500; transition: all 0.2s; }
    .lang-btn:hover { border-color: var(--text-3); }
    .lang-dropdown { position: absolute; top: calc(100% + 0.5rem); right: 0; background: white; border: 1px solid var(--border); border-radius: 16px; overflow: hidden; box-shadow: 0 12px 40px rgba(0,0,0,0.08); opacity: 0; visibility: hidden; transform: translateY(-6px); transition: all 0.2s; z-index: 50; }
    .lang-dropdown.open { opacity: 1; visibility: visible; transform: translateY(0); }
    .lang-option { display: flex; align-items: center; gap: 0.625rem; padding: 0.625rem 1rem; font-size: 0.8rem; color: var(--text-2); transition: all 0.15s; white-space: nowrap; }
    .lang-option:hover { background: var(--surface); }
    .lang-option.active { color: var(--accent); font-weight: 600; }

    .footer { background: var(--bg-2); border-top: 1px solid var(--border); padding: 4rem 0 2rem; }
    .footer-grid { display: grid; grid-template-columns: 2fr 1fr 1fr; gap: 3rem; margin-bottom: 2.5rem; }
    .footer-desc { color: var(--text-3); font-size: 0.875rem; line-height: 1.7; max-width: 20rem; }
    .footer-title { font-family: 'Plus Jakarta Sans', sans-serif; font-size: 0.75rem; text-transform: uppercase; letter-spacing: 0.1em; color: var(--text-3); margin-bottom: 1rem; font-weight: 700; }
    .footer-links { display: flex; flex-direction: column; gap: 0.625rem; }
    .footer-links a { color: var(--text-2); font-size: 0.875rem; transition: color 0.2s; }
    .footer-links a:hover { color: var(--accent); }
    .social-links { display: flex; gap: 0.5rem; }
    .social-links a { width: 2.5rem; height: 2.5rem; border-radius: 14px; background: var(--surface); display: flex; align-items: center; justify-content: center; color: var(--text-2); transition: all 0.2s; }
    .social-links a:hover { background: var(--accent-bg); color: var(--accent); }
    .footer-bottom { border-top: 1px solid var(--border); padding-top: 2rem; text-align: center; }
    .footer-bottom p { color: var(--text-3); font-size: 0.8rem; }

    @media (max-width: 768px) {
      .nav-links { display: none; position: absolute; top: 4.5rem; left: 0; right: 0; flex-direction: column; padding: 1rem 1.5rem; gap: 0; background: rgba(255,255,255,0.98); backdrop-filter: blur(20px); border-bottom: 1px solid var(--border); }
      .nav-links.open { display: flex; }
      .nav-link { padding: 0.875rem 0; border-bottom: 1px solid var(--surface); }
      .mobile-toggle { display: block; }
      .nav-cta { display: none; }
      .footer-grid { grid-template-columns: 1fr; gap: 2rem; }
      .logo-text-group .logo-sub { display: none; }
    }
  </style>
</body>
</html>
