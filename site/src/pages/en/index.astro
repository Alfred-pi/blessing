---
import Layout from '../../layouts/Layout.astro';
import { translations } from '../../i18n/translations';
const lang = 'en';
const t = translations[lang];
---

<Layout lang={lang}>
  <!-- Hero -->
  <section id="home" class="hero">
    <div class="hero-glow"></div>
    <div class="hero-glow-2"></div>
    <div class="container hero-content">
      <div class="hero-badge animate-fade-up">
        <svg width="14" height="14" viewBox="0 0 24 24" fill="var(--gold)" stroke="none"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
        <span>{t.hero.badge}</span>
      </div>
      <h1 class="hero-title animate-fade-up delay-1">
        {t.hero.line1}<br/>
        <span class="gold-gradient">{t.hero.line2}</span>
      </h1>
      <p class="hero-subtitle animate-fade-up delay-2">{t.hero.subtitle}</p>
      <div class="hero-ctas animate-fade-up delay-3">
        <a href="#contact" class="btn-gold">
          {t.hero.cta}
          <svg width="18" height="18" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><line x1="5" y1="12" x2="19" y2="12"/><polyline points="12 5 19 12 12 19"/></svg>
        </a>
        <a href="#services" class="btn-outline">{t.hero.cta2}</a>
      </div>
    </div>
    <div class="hero-line"></div>
  </section>

  <!-- Services -->
  <section id="services" class="section">
    <div class="container">
      <div class="section-header reveal">
        <h2>{t.services.title}</h2>
        <p>{t.services.subtitle}</p>
      </div>
      <div class="services-grid">
        {t.services.items.map((item: any, i: number) => (
          <div class={`service-card reveal`} style={`transition-delay: ${i * 0.1}s`}>
            <div class="service-icon">
              {item.icon === 'shirt' && <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.38 3.46 16 2 12 5 8 2 3.62 3.46a2 2 0 0 0-1.34 1.44l-.76 3.2a1 1 0 0 0 .53 1.15l2.95 1.47V20a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-9.28l2.95-1.47a1 1 0 0 0 .53-1.15l-.76-3.2a2 2 0 0 0-1.34-1.44Z"/></svg>}
              {item.icon === 'shield' && <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>}
              {item.icon === 'hard-hat' && <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M2 18a1 1 0 0 0 1 1h18a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v2z"/><path d="M10 15V6a2 2 0 0 1 4 0v9"/><path d="M4 15v-3a6 6 0 0 1 6-6"/><path d="M14 6a6 6 0 0 1 6 6v3"/></svg>}
              {item.icon === 'palette' && <svg width="26" height="26" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="13.5" cy="6.5" r=".5"/><circle cx="17.5" cy="10.5" r=".5"/><circle cx="8.5" cy="7.5" r=".5"/><circle cx="6.5" cy="12" r=".5"/><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.554C21.965 6.012 17.461 2 12 2z"/></svg>}
            </div>
            <h3>{item.title}</h3>
            <p>{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About -->
  <section id="about" class="section">
    <div class="about-glow"></div>
    <div class="container about-grid">
      <div>
        <div class="about-label reveal">
          <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="var(--gold)" stroke-width="2"><circle cx="12" cy="8" r="7"/><polyline points="8.21 13.89 7 23 12 20 17 23 15.79 13.88"/></svg>
          <span>{t.about.label}</span>
        </div>
        <h2 class="reveal" style="font-size: clamp(2rem, 5vw, 3.2rem); margin-bottom: 2rem;">{t.about.title}</h2>
        <p class="reveal" style="color: var(--gray-400); font-size: 1.1rem; line-height: 1.8; margin-bottom: 1.25rem;">{t.about.p1}</p>
        <p class="reveal" style="color: var(--gray-400); font-size: 1.1rem; line-height: 1.8;">{t.about.p2}</p>
      </div>
      <div class="stats-col">
        {t.about.stats.map((stat: any, i: number) => (
          <div class={`stat-card reveal`} style={`transition-delay: ${(i + 2) * 0.1}s`}>
            <div class="stat-value">{stat.value}</div>
            <div class="stat-label">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <section id="gallery" class="section">
    <div class="container">
      <div class="section-header reveal">
        <h2>{t.gallery.title}</h2>
        <p>{t.gallery.subtitle}</p>
      </div>
      <div class="gallery-grid">
        {t.gallery.items.map((item: string, i: number) => (
          <div class={`gallery-item reveal`} style={`transition-delay: ${i * 0.08}s`}>
            <div class="gallery-placeholder">
              <svg width="40" height="40" viewBox="0 0 24 24" fill="none" stroke="rgba(212,168,83,0.15)" stroke-width="1.5"><circle cx="12" cy="12" r="3"/><line x1="3" y1="6" x2="3" y2="6"/><line x1="21" y1="6" x2="21" y2="6"/><rect x="2" y="2" width="20" height="20" rx="2"/></svg>
            </div>
            <div class="gallery-overlay">
              <p>{item}</p>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="section">
    <div class="contact-glow"></div>
    <div class="container">
      <div class="section-header reveal">
        <h2>{t.contact.title}</h2>
        <p>{t.contact.subtitle}</p>
      </div>
      <div class="contact-grid">
        <form class="contact-form reveal" onsubmit="event.preventDefault()">
          <div class="form-row">
            <input type="text" placeholder={t.contact.name} class="input" />
            <input type="email" placeholder={t.contact.email} class="input" />
          </div>
          <input type="tel" placeholder={t.contact.phone} class="input" />
          <textarea rows="5" placeholder={t.contact.message} class="input textarea"></textarea>
          <button type="submit" class="btn-gold" style="width: 100%; justify-content: center; padding: 1.1rem; font-size: 1.05rem;">
            {t.contact.send}
          </button>
        </form>
        <div class="contact-info reveal" style="transition-delay: 0.1s;">
          <div class="info-card">
            <div class="info-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="var(--gold)" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
            </div>
            <div>
              <p class="info-label">{t.contact.location}</p>
              <p class="info-value">Luanda, Angola</p>
            </div>
          </div>
          <div class="info-card">
            <div class="info-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="var(--gold)" stroke-width="2"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
            </div>
            <div>
              <p class="info-label">WhatsApp</p>
              <p class="info-value">+244 XXX XXX XXX</p>
            </div>
          </div>
          <div class="info-card">
            <div class="info-icon">
              <svg width="22" height="22" viewBox="0 0 24 24" fill="none" stroke="var(--gold)" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
            </div>
            <div>
              <p class="info-label">Email</p>
              <p class="info-value">info@blessinguniformes.com</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  /* Hero */
  .hero { position: relative; min-height: 100vh; display: flex; align-items: center; padding-top: 4rem; overflow: hidden; }
  .hero-glow { position: absolute; top: 20%; left: 50%; transform: translateX(-50%); width: 50rem; height: 38rem; background: rgba(212,168,83,0.04); border-radius: 50%; filter: blur(150px); pointer-events: none; }
  .hero-glow-2 { position: absolute; bottom: 0; right: 0; width: 25rem; height: 25rem; background: rgba(212,168,83,0.025); border-radius: 50%; filter: blur(120px); pointer-events: none; }
  .hero-content { max-width: 48rem; padding: 5rem 1.5rem; }
  .hero-badge {
    display: inline-flex; align-items: center; gap: 0.5rem;
    padding: 0.5rem 1rem; border-radius: 9999px;
    border: 1px solid rgba(212,168,83,0.2); background: rgba(212,168,83,0.05);
    margin-bottom: 2rem; font-size: 0.875rem; color: var(--gold);
  }
  .hero-title { font-size: clamp(2.8rem, 8vw, 5.5rem); font-weight: 700; line-height: 0.95; letter-spacing: -0.03em; margin-bottom: 2rem; }
  .hero-subtitle { font-size: clamp(1rem, 2vw, 1.25rem); color: var(--gray-400); max-width: 36rem; margin-bottom: 2.5rem; line-height: 1.7; }
  .hero-ctas { display: flex; flex-wrap: wrap; gap: 1rem; }
  .hero-line { position: absolute; bottom: 0; left: 0; right: 0; height: 1px; background: linear-gradient(to right, transparent, rgba(212,168,83,0.2), transparent); }

  /* Sections */
  .section { padding: 6rem 0; position: relative; }
  .section-header { text-align: center; margin-bottom: 4rem; }
  .section-header h2 { font-size: clamp(2rem, 5vw, 3.2rem); margin-bottom: 1rem; }
  .section-header p { color: var(--gray-400); font-size: 1.1rem; }

  /* Services */
  .services-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.5rem; }
  .service-card {
    padding: 2.5rem; border-radius: 1rem; border: 1px solid var(--dark-border);
    background: var(--dark-card); transition: all 0.4s; position: relative; overflow: hidden;
  }
  .service-card::before {
    content: ''; position: absolute; inset: 0; border-radius: 1rem;
    background: linear-gradient(135deg, rgba(212,168,83,0.05), transparent);
    opacity: 0; transition: opacity 0.4s;
  }
  .service-card:hover { border-color: rgba(212,168,83,0.15); }
  .service-card:hover::before { opacity: 1; }
  .service-icon {
    width: 3.5rem; height: 3.5rem; border-radius: 0.75rem;
    background: rgba(212,168,83,0.1); display: flex; align-items: center; justify-content: center;
    margin-bottom: 1.5rem; color: var(--gold); transition: background 0.3s;
  }
  .service-card:hover .service-icon { background: rgba(212,168,83,0.18); }
  .service-card h3 { font-family: 'Syne', sans-serif; font-size: 1.25rem; margin-bottom: 0.75rem; }
  .service-card p { color: var(--gray-400); line-height: 1.7; font-size: 0.95rem; }

  /* About */
  .about-glow { position: absolute; left: 0; top: 50%; transform: translateY(-50%); width: 20rem; height: 30rem; background: rgba(212,168,83,0.025); border-radius: 50%; filter: blur(150px); pointer-events: none; }
  .about-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; }
  .about-label { display: inline-flex; align-items: center; gap: 0.5rem; margin-bottom: 1.5rem; color: var(--gold); font-size: 0.875rem; font-weight: 500; text-transform: uppercase; letter-spacing: 0.1em; }
  .stats-col { display: flex; flex-direction: column; gap: 1.5rem; }
  .stat-card {
    display: flex; align-items: center; gap: 1.5rem;
    padding: 1.5rem; border-radius: 1rem;
    border: 1px solid var(--dark-border); background: var(--dark-card);
  }
  .stat-value { font-family: 'Syne', sans-serif; font-size: 2rem; font-weight: 700; color: var(--gold); }
  .stat-label { color: var(--gray-400); font-size: 0.9rem; }

  /* Gallery */
  .gallery-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; }
  .gallery-item {
    position: relative; aspect-ratio: 4/3; border-radius: 1rem; overflow: hidden;
    border: 1px solid var(--dark-border); background: var(--dark-card); cursor: pointer;
  }
  .gallery-placeholder { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; }
  .gallery-overlay {
    position: absolute; inset: 0; background: linear-gradient(to top, rgba(0,0,0,0.8), transparent 60%);
    display: flex; align-items: flex-end; padding: 1.25rem;
  }
  .gallery-overlay p { font-family: 'Syne', sans-serif; font-weight: 600; font-size: 0.9rem; }
  .gallery-item:hover { border-color: rgba(212,168,83,0.2); }

  /* Contact */
  .contact-glow { position: absolute; right: 0; top: 0; width: 25rem; height: 25rem; background: rgba(212,168,83,0.025); border-radius: 50%; filter: blur(150px); pointer-events: none; }
  .contact-grid { display: grid; grid-template-columns: 3fr 2fr; gap: 2.5rem; }
  .contact-form { display: flex; flex-direction: column; gap: 1.25rem; }
  .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1.25rem; }
  .input {
    width: 100%; padding: 1rem 1.25rem; border-radius: 0.75rem;
    background: var(--dark-card); border: 1px solid var(--dark-border);
    color: white; font-family: 'DM Sans', sans-serif; font-size: 1rem;
    transition: border-color 0.3s; outline: none;
  }
  .input::placeholder { color: var(--gray-500); }
  .input:focus { border-color: rgba(212,168,83,0.4); }
  .textarea { resize: none; }
  .contact-info { display: flex; flex-direction: column; gap: 1.25rem; }
  .info-card {
    display: flex; align-items: flex-start; gap: 1rem;
    padding: 1.25rem; border-radius: 0.75rem;
    border: 1px solid var(--dark-border); background: var(--dark-card);
  }
  .info-icon {
    width: 3rem; height: 3rem; border-radius: 0.5rem; flex-shrink: 0;
    background: rgba(212,168,83,0.1); display: flex; align-items: center; justify-content: center;
  }
  .info-label { color: var(--gray-500); font-size: 0.8rem; margin-bottom: 0.25rem; }
  .info-value { color: white; font-size: 0.95rem; }

  @media (max-width: 768px) {
    .services-grid { grid-template-columns: 1fr; }
    .about-grid { grid-template-columns: 1fr; gap: 2.5rem; }
    .gallery-grid { grid-template-columns: repeat(2, 1fr); }
    .contact-grid { grid-template-columns: 1fr; }
    .form-row { grid-template-columns: 1fr; }
    .hero-content { padding: 3rem 1.5rem; }
  }
</style>
