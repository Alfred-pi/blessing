---
import Layout from '../../layouts/Layout.astro';
import { translations } from '../../i18n/translations';
const lang = 'en';
const t = translations[lang];
---

<Layout lang={lang}>
  <!-- Hero -->
  <section id="home" class="hero">
    <div class="container hero-inner">
      <div class="hero-content">
        <div class="tag animate-fade-up">
          <svg width="14" height="14" viewBox="0 0 24 24" fill="currentColor" stroke="none"><polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"/></svg>
          {t.hero.badge}
        </div>
        <h1 class="hero-title animate-fade-up delay-1">
          {t.hero.line1}<br/>
          <span class="hero-accent">{t.hero.line2}</span>
        </h1>
        <p class="hero-subtitle animate-fade-up delay-2">{t.hero.subtitle}</p>
        <div class="hero-ctas animate-fade-up delay-3">
          <a href="#contact" class="btn btn-primary">{t.hero.cta} →</a>
          <a href="#services" class="btn btn-secondary">{t.hero.cta2}</a>
        </div>
        <div class="hero-trust animate-fade-up delay-4">
          <div class="trust-colors">
            <span class="tc tc-r"></span><span class="tc tc-y"></span><span class="tc tc-g"></span><span class="tc tc-b"></span>
          </div>
          <span class="trust-text">500+ empresas confiam em nós</span>
        </div>
      </div>
      <div class="hero-visual animate-fade-up delay-2">
        <div class="hero-card">
          <div class="hero-card-inner">
            <div class="hc-icon">
              <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="var(--red)" stroke-width="1.5"><path d="M20.38 3.46 16 2 12 5 8 2 3.62 3.46a2 2 0 0 0-1.34 1.44l-.76 3.2a1 1 0 0 0 .53 1.15l2.95 1.47V20a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-9.28l2.95-1.47a1 1 0 0 0 .53-1.15l-.76-3.2a2 2 0 0 0-1.34-1.44Z"/></svg>
            </div>
            <div class="hc-label">Uniformes Premium</div>
            <div class="hc-value">Qualidade Superior</div>
          </div>
        </div>
        <div class="hero-accent-dots">
          <span style="background: var(--red);"></span>
          <span style="background: var(--yellow);"></span>
          <span style="background: var(--green);"></span>
          <span style="background: var(--blue);"></span>
        </div>
      </div>
    </div>
  </section>

  <!-- Services -->
  <section id="services" class="section bg-alt">
    <div class="container">
      <div class="section-header reveal">
        <div class="tag">{t.services.title}</div>
        <h2>{t.services.title}</h2>
        <p>{t.services.subtitle}</p>
      </div>
      <div class="services-grid">
        {t.services.items.map((item: any, i: number) => (
          <div class="service-card reveal" style={`transition-delay: ${i * 0.1}s`}>
            <div class={`service-icon icon-${item.icon}`}>
              {item.icon === 'shirt' && <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M20.38 3.46 16 2 12 5 8 2 3.62 3.46a2 2 0 0 0-1.34 1.44l-.76 3.2a1 1 0 0 0 .53 1.15l2.95 1.47V20a2 2 0 0 0 2 2h10a2 2 0 0 0 2-2v-9.28l2.95-1.47a1 1 0 0 0 .53-1.15l-.76-3.2a2 2 0 0 0-1.34-1.44Z"/></svg>}
              {item.icon === 'shield' && <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M12 22s8-4 8-10V5l-8-3-8 3v7c0 6 8 10 8 10z"/></svg>}
              {item.icon === 'hard-hat' && <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M2 18a1 1 0 0 0 1 1h18a1 1 0 0 0 1-1v-2a1 1 0 0 0-1-1H3a1 1 0 0 0-1 1v2z"/><path d="M10 15V6a2 2 0 0 1 4 0v9"/><path d="M4 15v-3a6 6 0 0 1 6-6"/><path d="M14 6a6 6 0 0 1 6 6v3"/></svg>}
              {item.icon === 'palette' && <svg width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><circle cx="13.5" cy="6.5" r=".5"/><circle cx="17.5" cy="10.5" r=".5"/><circle cx="8.5" cy="7.5" r=".5"/><circle cx="6.5" cy="12" r=".5"/><path d="M12 2C6.5 2 2 6.5 2 12s4.5 10 10 10c.926 0 1.648-.746 1.648-1.688 0-.437-.18-.835-.437-1.125-.29-.289-.438-.652-.438-1.125a1.64 1.64 0 0 1 1.668-1.668h1.996c3.051 0 5.555-2.503 5.555-5.554C21.965 6.012 17.461 2 12 2z"/></svg>}
            </div>
            <h3>{item.title}</h3>
            <p>{item.desc}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- About -->
  <section id="about" class="section">
    <div class="container about-grid">
      <div class="about-text">
        <div class="tag reveal">{t.about.label}</div>
        <h2 class="reveal" style="margin: 1.5rem 0;">{t.about.title}</h2>
        <p class="reveal about-p">{t.about.p1}</p>
        <p class="reveal about-p">{t.about.p2}</p>
      </div>
      <div class="stats-col">
        {t.about.stats.map((stat: any, i: number) => (
          <div class={`stat-card reveal`} style={`transition-delay: ${(i + 2) * 0.1}s`}>
            <div class={`stat-accent accent-${i}`}></div>
            <div class="stat-value">{stat.value}</div>
            <div class="stat-label">{stat.label}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Gallery -->
  <section id="gallery" class="section bg-alt">
    <div class="container">
      <div class="section-header reveal">
        <div class="tag">{t.gallery.title}</div>
        <h2>{t.gallery.title}</h2>
        <p>{t.gallery.subtitle}</p>
      </div>
      <div class="gallery-grid">
        {t.gallery.items.map((item: string, i: number) => (
          <div class="gallery-item reveal" style={`transition-delay: ${i * 0.08}s`}>
            <div class="gallery-placeholder">
              <svg width="36" height="36" viewBox="0 0 24 24" fill="none" stroke="var(--text-3)" stroke-width="1" opacity="0.3"><rect x="2" y="2" width="20" height="20" rx="2"/><circle cx="12" cy="12" r="3"/></svg>
            </div>
            <div class="gallery-label">{item}</div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Contact -->
  <section id="contact" class="section">
    <div class="container">
      <div class="section-header reveal">
        <div class="tag">{t.contact.title}</div>
        <h2>{t.contact.title}</h2>
        <p>{t.contact.subtitle}</p>
      </div>
      <div class="contact-grid">
        <form class="contact-form reveal" onsubmit="event.preventDefault()">
          <div class="form-row">
            <input type="text" placeholder={t.contact.name} />
            <input type="email" placeholder={t.contact.email} />
          </div>
          <input type="tel" placeholder={t.contact.phone} />
          <textarea rows="5" placeholder={t.contact.message}></textarea>
          <button type="submit" class="btn btn-primary" style="width: 100%;">{t.contact.send} →</button>
        </form>
        <div class="contact-info reveal" style="transition-delay: 0.1s;">
          <div class="info-card">
            <div class="info-icon" style="background: rgba(46,173,74,0.08); color: var(--green);">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>
            </div>
            <div><p class="info-label">{t.contact.location}</p><p class="info-value">Luanda, Angola</p></div>
          </div>
          <div class="info-card">
            <div class="info-icon" style="background: rgba(46,173,74,0.08); color: var(--green);">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 11.5a8.38 8.38 0 0 1-.9 3.8 8.5 8.5 0 0 1-7.6 4.7 8.38 8.38 0 0 1-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 0 1-.9-3.8 8.5 8.5 0 0 1 4.7-7.6 8.38 8.38 0 0 1 3.8-.9h.5a8.48 8.48 0 0 1 8 8v.5z"/></svg>
            </div>
            <div><p class="info-label">WhatsApp</p><p class="info-value">+244 XXX XXX XXX</p></div>
          </div>
          <div class="info-card">
            <div class="info-icon" style="background: rgba(43,124,212,0.08); color: var(--blue);">
              <svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"/><polyline points="22,6 12,13 2,6"/></svg>
            </div>
            <div><p class="info-label">Email</p><p class="info-value">info@blessinguniformes.com</p></div>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  .hero { padding: 8rem 0 5rem; overflow: hidden; }
  .hero-inner { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; }
  .hero-title { font-size: clamp(2.5rem, 6vw, 4.2rem); font-weight: 800; line-height: 1; letter-spacing: -0.03em; margin: 1.5rem 0; }
  .hero-accent { color: var(--accent); }
  .hero-subtitle { font-size: 1.1rem; color: var(--text-2); max-width: 32rem; line-height: 1.7; margin-bottom: 2rem; }
  .hero-ctas { display: flex; flex-wrap: wrap; gap: 0.75rem; margin-bottom: 2.5rem; }
  .hero-trust { display: flex; align-items: center; gap: 0.75rem; }
  .trust-colors { display: flex; gap: 0; }
  .tc { width: 1.75rem; height: 1.75rem; border-radius: 50%; border: 2px solid white; margin-left: -0.5rem; }
  .tc:first-child { margin-left: 0; }
  .tc-r { background: var(--red); }
  .tc-y { background: var(--yellow); }
  .tc-g { background: var(--green); }
  .tc-b { background: var(--blue); }
  .trust-text { font-size: 0.85rem; color: var(--text-3); font-weight: 500; }

  .hero-visual { display: flex; flex-direction: column; align-items: center; gap: 2rem; }
  .hero-card { background: var(--surface); border-radius: 28px; padding: 2.5rem; width: 100%; max-width: 22rem; }
  .hero-card-inner { text-align: center; }
  .hc-icon { width: 4rem; height: 4rem; border-radius: 20px; background: var(--accent-bg); display: flex; align-items: center; justify-content: center; margin: 0 auto 1.25rem; }
  .hc-label { font-size: 0.8rem; color: var(--text-3); text-transform: uppercase; letter-spacing: 0.08em; font-weight: 600; margin-bottom: 0.5rem; }
  .hc-value { font-family: 'Syne', sans-serif; font-size: 1.25rem; font-weight: 700; }
  .hero-accent-dots { display: flex; gap: 0.5rem; }
  .hero-accent-dots span { width: 0.625rem; height: 0.625rem; border-radius: 50%; }

  .section { padding: 5rem 0; }
  .bg-alt { background: var(--bg-2); }
  .section-header { text-align: center; margin-bottom: 3.5rem; }
  .section-header h2 { font-size: clamp(1.8rem, 4vw, 2.75rem); margin: 1rem 0 0.75rem; font-weight: 800; letter-spacing: -0.02em; }
  .section-header p { color: var(--text-2); font-size: 1.05rem; max-width: 32rem; margin: 0 auto; }
  .section-header .tag { margin-bottom: 0; }

  .services-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.25rem; }
  .service-card { background: white; border-radius: 28px; padding: 2rem; transition: all 0.3s; border: 1px solid var(--border); }
  .service-card:hover { border-color: var(--accent); box-shadow: 0 8px 32px rgba(212, 43, 43, 0.06); transform: translateY(-2px); }
  .service-icon { width: 3.25rem; height: 3.25rem; border-radius: 14px; display: flex; align-items: center; justify-content: center; margin-bottom: 1.25rem; }
  .icon-shirt { background: rgba(212, 43, 43, 0.08); color: var(--red); }
  .icon-shield { background: rgba(43, 124, 212, 0.08); color: var(--blue); }
  .icon-hard-hat { background: rgba(240, 180, 41, 0.08); color: var(--yellow); }
  .icon-palette { background: rgba(46, 173, 74, 0.08); color: var(--green); }
  .service-card h3 { font-family: 'Syne', sans-serif; font-size: 1.15rem; margin-bottom: 0.625rem; font-weight: 700; }
  .service-card p { color: var(--text-2); line-height: 1.65; font-size: 0.9rem; }

  .about-grid { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; }
  .about-p { color: var(--text-2); font-size: 1.05rem; line-height: 1.8; margin-bottom: 1rem; }
  .stats-col { display: flex; flex-direction: column; gap: 1rem; }
  .stat-card { background: var(--surface); border-radius: 28px; padding: 1.75rem 2rem; display: flex; align-items: center; gap: 1.25rem; position: relative; overflow: hidden; }
  .stat-accent { width: 4px; height: 2.5rem; border-radius: 4px; flex-shrink: 0; }
  .accent-0 { background: var(--red); }
  .accent-1 { background: var(--yellow); }
  .accent-2 { background: var(--green); }
  .stat-value { font-family: 'Syne', sans-serif; font-size: 1.75rem; font-weight: 800; }
  .stat-label { color: var(--text-2); font-size: 0.85rem; }

  .gallery-grid { display: grid; grid-template-columns: repeat(3, 1fr); gap: 1rem; }
  .gallery-item { position: relative; aspect-ratio: 4/3; border-radius: 20px; overflow: hidden; background: white; border: 1px solid var(--border); cursor: pointer; transition: all 0.3s; }
  .gallery-item:hover { border-color: var(--accent); transform: translateY(-2px); box-shadow: 0 8px 24px rgba(0,0,0,0.04); }
  .gallery-placeholder { position: absolute; inset: 0; display: flex; align-items: center; justify-content: center; }
  .gallery-label { position: absolute; bottom: 0; left: 0; right: 0; padding: 1rem 1.25rem; background: linear-gradient(to top, rgba(255,255,255,0.95), transparent); font-family: 'Syne', sans-serif; font-weight: 600; font-size: 0.85rem; color: var(--text); }

  .contact-grid { display: grid; grid-template-columns: 3fr 2fr; gap: 2rem; max-width: 56rem; margin: 0 auto; }
  .contact-form { display: flex; flex-direction: column; gap: 1rem; }
  .form-row { display: grid; grid-template-columns: 1fr 1fr; gap: 1rem; }
  input, textarea { width: 100%; padding: 1rem 1.25rem; border-radius: 20px; background: var(--surface); border: 1px solid var(--border); color: var(--text); font-family: 'DM Sans', sans-serif; font-size: 0.95rem; transition: border-color 0.2s; outline: none; resize: none; }
  input::placeholder, textarea::placeholder { color: var(--text-3); }
  input:focus, textarea:focus { border-color: var(--accent); }
  .contact-info { display: flex; flex-direction: column; gap: 0.875rem; }
  .info-card { display: flex; align-items: center; gap: 1rem; padding: 1.25rem; border-radius: 20px; background: var(--surface); }
  .info-icon { width: 2.75rem; height: 2.75rem; border-radius: 14px; display: flex; align-items: center; justify-content: center; flex-shrink: 0; }
  .info-label { color: var(--text-3); font-size: 0.75rem; margin-bottom: 0.125rem; font-weight: 500; }
  .info-value { font-size: 0.9rem; font-weight: 500; }

  @media (max-width: 768px) {
    .hero { padding: 6rem 0 3rem; }
    .hero-inner { grid-template-columns: 1fr; gap: 3rem; }
    .hero-visual { display: none; }
    .services-grid { grid-template-columns: 1fr; }
    .about-grid { grid-template-columns: 1fr; gap: 2.5rem; }
    .gallery-grid { grid-template-columns: repeat(2, 1fr); }
    .contact-grid { grid-template-columns: 1fr; }
    .form-row { grid-template-columns: 1fr; }
  }
</style>
