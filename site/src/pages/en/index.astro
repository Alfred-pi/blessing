  .hero-inner { display: grid; grid-template-columns: 1fr 1fr; gap: 4rem; align-items: center; }
  .hero-title { font-size: clamp(2.5rem, 6vw, 4.2rem); font-weight: 800; line-height: 1; letter-spacing: -0.03em; margin: 1.5rem 0; }
  .hero-accent { color: var(--accent); }
  .hero-subtitle { font-size: 1.1rem; color: var(--text-2); max-width: 32rem; line-height: 1.7; margin-bottom: 2rem; }
  .hero-ctas { display: flex; flex-wrap: wrap; gap: 0.75rem; margin-bottom: 2.5rem; }
  .hero-trust { display: flex; align-items: center; gap: 0.75rem; }
  .trust-colors { display: flex; }
  .tc { width: 1.75rem; height: 1.75rem; border-radius: 50%; border: 2px solid white; margin-left: -0.5rem; }
  .tc:first-child { margin-left: 0; }
  .tc-r { background: var(--red); } .tc-y { background: var(--yellow); } .tc-g { background: var(--green); } .tc-b { background: var(--blue); }
  .trust-text { font-size: 0.85rem; color: var(--text-3); font-weight: 500; }
  .hero-visual { display: flex; align-items: center; justify-content: center; }
  .hero-images { position: relative; width: 100%; max-width: 24rem; aspect-ratio: 1; }
  .hero-img { position: absolute; border-radius: 20px; object-fit: cover; box-shadow: 0 16px 48px rgba(0,0,0,0.1); border: 3px solid white; transition: transform 0.5s cubic-bezier(0.25, 0.46, 0.45, 0.94); }
  .hero-img:hover { transform: scale(1.03) rotate(1deg); }
  .hero-img.main { width: 75%; height: 70%; top: 0; right: 0; z-index: 2; }
  .hero-img.secondary { width: 55%; height: 50%; bottom: 0; left: 0; z-index: 1; }
  .hero-img.badge-img { width: 5.5rem; height: 5.5rem; border-radius: 50%; bottom: 15%; right: 5%; z-index: 3; border: 4px solid white; animation: float 4s ease-in-out infinite; }
  .hero-scroll-indicator { position: absolute; bottom: 2rem; left: 50%; transform: translateX(-50%); }
  .scroll-line { width: 2px; height: 2.5rem; background: linear-gradient(to bottom, var(--accent), transparent); animation: pulse 2s ease-in-out infinite; border-radius: 2px; }

  /* Marquee */
  .marquee-section { padding: 1.25rem 0; background: var(--text); overflow: hidden; }
  .marquee-track { display: flex; }
  .marquee-content { display: flex; animation: marquee 25s linear infinite; white-space: nowrap; }
  .marquee-item { display: inline-flex; align-items: center; gap: 0.75rem; padding: 0 1.5rem; color: white; font-size: 0.9rem; font-weight: 600; text-transform: uppercase; letter-spacing: 0.06em; }
  .marquee-dot { width: 6px; height: 6px; border-radius: 50%; background: var(--red); }

  /* Sections */
  .section { padding: 5rem 0; }
  .bg-alt { background: var(--bg-2); }
  .section-header { text-align: center; margin-bottom: 3.5rem; }
  .section-header h2 { font-size: clamp(1.8rem, 4vw, 2.75rem); margin: 1rem 0 0.75rem; font-weight: 800; letter-spacing: -0.02em; }
  .section-header p { color: var(--text-2); font-size: 1.05rem; max-width: 32rem; margin: 0 auto; }

  /* Services */
  .services-grid { display: grid; grid-template-columns: repeat(2, 1fr); gap: 1.25rem; }
  .service-card { background: white; border-radius: 28px; padding: 2rem; transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94); border: 1px solid var(--border); position: relative; overflow: hidden; }
  .service-card:hover { border-color: var(--accent); box-shadow: 0 12px 40px rgba(212, 43, 43, 0.08); transform: translateY(-4px); }
  .service-number { position: absolute; top: 1.25rem; right: 1.5rem; font-size: 3rem; font-weight: 800; color: var(--surface-2); line-height: 1; font-family: 'Plus Jakarta Sans', sans-serif; }
  .service-icon { width: 3.25rem; height: 3.25rem; border-radius: 14px; display: flex; align-items: center; justify-content: center; margin-bottom: 1.25rem; transition: transform 0.3s; }
  .service-card:hover .service-icon { transform: scale(1.1) rotate(-5deg); }
  .icon-shirt { background: rgba(212, 43, 43, 0.08); color: var(--red); }
  .icon-shield { background: rgba(43, 124, 212, 0.08); color: var(--blue); }
